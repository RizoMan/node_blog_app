<div class="mx-auto m-4">
    <div class="card">
        <div class="card-header">
            <h3>New blog entry</h3>
        </div>
        <div class="card-body">
            <form action="/entries/new" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control" placeholder="Content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block col-md-4 mx-auto">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>